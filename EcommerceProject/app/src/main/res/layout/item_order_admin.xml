<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView_item_cate"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtView_item_order_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ma don hang"
            android:textSize="20sp"
            android:padding="10dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/txtView_item_order_buyer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ten nguoi mua"
            android:textSize="20sp"
            android:padding="10dp"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/txtView_item_order_totalprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tong tien"
            android:textSize="20sp"
            android:padding="10dp"
            android:textColor="@color/black"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/lightgrey"
            android:visibility="visible"/>

        <TextView
            android:id="@+id/txtView_item_order_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Trang thai"
            android:textSize="20sp"
            android:textAlignment="textEnd"
            android:padding="10dp"
            android:textColor="@color/red"/>

    </LinearLayout>


</androidx.cardview.widget.CardView>