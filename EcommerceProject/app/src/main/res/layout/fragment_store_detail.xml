<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.StoreDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgView_store_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:padding="10dp"
            android:contentDescription="Store Image"
            android:scaleType="centerCrop"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:padding="10dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/edt_store_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tên cửa hàng"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:layout_marginBottom="10dp"
                android:inputType="none"/>

            <EditText
                android:id="@+id/edt_store_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Địa chỉ"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:inputType="none"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="@color/black"
                android:layout_marginVertical="20dp"
                android:text="Người sở hữu" />

            <Spinner
                android:id="@+id/spinner_owner"
                android:layout_width="match_parent"
                android:layout_height="60dp" />

            <Button
                android:id="@+id/btn_insert_image_store"
                android:layout_width="150dp"
                android:layout_height="70dp"
                android:layout_marginVertical="10dp"
                android:backgroundTint="@color/navy"
                android:text="Thêm avatar"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_store_edit"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:visibility="gone"
                android:backgroundTint="@color/navy"
                android:text="Edit"
                android:layout_margin="10dp" />

            <Button
                android:id="@+id/btn_store_delete"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="Delete"
                android:backgroundTint="@color/red"
                android:textSize="20sp"
                android:visibility="gone"
                android:layout_margin="10dp" />

            <Button
                android:id="@+id/btn_store_exit"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:backgroundTint="@color/white"
                android:textColor="@color/black"
                android:text="Exit"
                android:visibility="gone"
                android:layout_margin="10dp" />

            <Button
                android:id="@+id/btn_store_done"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:textSize="20sp"
                android:backgroundTint="@color/green"
                android:textColor="@color/black"
                android:text="Done"
                android:visibility="gone"
                android:layout_margin="10dp" />

            <Button
                android:id="@+id/btn_store_insert"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:text="INSERT"
                android:backgroundTint="@color/green"
                android:textSize="20sp"
                android:visibility="visible"
                android:layout_margin="10dp"/>
        </LinearLayout>
    </LinearLayout>


</ScrollView>