<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgView_productImage_orderDetail"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:padding="5dp"
        android:scaleType="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtView_productName_orderDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ten san pham"
            android:textColor="@color/navy"
            android:textSize="24sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textAlignment="textEnd"
                android:textColor="@color/darkred"
                android:layout_marginEnd="10dp"
                android:text="x"/>
            <TextView
                android:id="@+id/txtView_productQuantity_orderDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textAlignment="textEnd"
                android:textColor="@color/darkred"
                android:text="1"/>
        </LinearLayout>


        <TextView
            android:id="@+id/txtView_totalPrice_orderDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textAlignment="textEnd"
            android:textColor="@color/darkred"
            android:text="100000"/>
    </LinearLayout>

</LinearLayout>